    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@7.26.11/dist/sweetalert2.all.min.js" integrity="sha256-aWXJZ/4kdONPAkoIYYyE6fmVw0gqPEbnk7nspLANguI=" crossorigin="anonymous"></script>

    <script type="text/javascript" src="../js/adjList.js"></script>
    <script type="text/javascript" src="../js/verbList.js"></script>
    <script type="text/javascript" src="../js/names.js"></script>
    <script type="text/javascript" src="../js/game.js"></script>
    <link rel="stylesheet" href="../styles/styles.css">
    <link rel="stylesheet" href="../styles/game.css">
    <link rel="stylesheet" href="../styles/nav.css">

</head>

<body>
  <div class="wrapper"><!--wrapper-->
    <nav id="sidebar"><!--sidebar-->
      <div class="sidebar-header p-2">
          <div id="dismiss">
              <i class="fas fa-arrow-circle-left ml-0"></i>   
          </div>
          <img src="../images/ssc-logo.jpg" width="200">
      </div>
      <ul class="list-unstyled components">
        <li class="active">
          <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false">Join the fun!</a>
          <ul class="collapse list-unstyled" id="homeSubmenu">
              <li><a href="#">Compete and Create</a></li>
              <li><a href="#">Watch and Vote</a></li>
          </ul>
        </li>
        <li>
          <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false">Browse Previous Stories</a>
          <ul class="collapse list-unstyled" id="pageSubmenu">
              <li><a href="#">Horror</a></li>
              <li><a href="#">Thriller</a></li>
              <li><a href="#">Fantasy</a></li>
              <li><a href="#">Comedy</a></li>
              <li><a href="#">Buddy/Hero Adventure</a></li>
              <li><a href="#">Romance/Relationship</a></li>
          </ul>
        </li>
        <li><a href="#">About</a></li>
        <li><a href="#">Contact Us</a></li>
      </ul>
    </nav><!--sidebar-->
    <div id="content1" class=""><!-- Page Content  -->
      <nav class="d-flex flex-row justify-content-between sign-in">
          <button class="sign-in" id="sidebarCollapse" >
              <div class="d-flex flex-row align-items-center">
                  <div class="fas fa-align-left fa-lg"></div>
                  <div class="ml-2 fa-md">Menu</div>
              </div>
          </button>
          <div class="text-center align-self-center">Sign in to get in on the action!</div>
          <button class="sign-in">
              <div class="d-flex flex-row align-items-center">
                  <div>Sign </div>
                  <div class="mx-1">in</div>
                  <div class="fas fa-sign-in-alt fa-2x" style="color:white;"></div>
              </div>
          </button> 
      </nav>
      <div class="container">
        <div class="row">
          <div class="col-lg-6">
            <div class="card">
              <img class="card-img-top" src="../images/ssc-logo.jpg">
              <div class="card-body">
                <div class="card-title">
                  <h5>Welcome to Short Story Craft</h5>
                  <h6 class="card-subtitle text-muted mb-2">A fun community based atmosphere for sparking creativity</h6>
                  <div class="card-text">
                    When you're ready, click        
                    <button class="sign-in rounded">
                      <div class="d-flex flex-row align-items-center">
                          <div class="fa-md">Sign </div>
                          <div class="mx-1 fa-md">in</div>
                          <div class="fas fa-sign-in-alt fa-2x" style="color:white;"></div>
                      </div>
                    </button> 
                     to create an account and get in on the fun.
                     <a id="RunCard" href="#" class="btn btn-primary">Show Entry</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div id="demo" class="col-lg-6">
            <div class="border border-dark text-center">
              Entry Demo
            </div>
            <div id="game-holder" style="display:none;">
              <div class="progress">
                <div class="progress-bar round-progress" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
              </div>
              <div class="nav d-flex flex-row">
                <button class="nav-link nav-tab-btn active" data-toggle="tab" href="#gameTab">Your Entry</button>
                <button class="nav-link nav-tab-btn" data-toggle="tab" href="#storyTab">Story So Far</button>
              </div>
              <div class="tab-content">
                <div id="gameTab" class="container tab-pane active border border-dark">
                  <div class="board">
                    <div class="sc-row">
                      <div class="sc-holder">
                        <div id="sc-Characters" class="segment-card">
                          <div class="sc-setup sc-back stroke-text Characters">Characters</div>
                          <div id="sc-Characters-front" class="sc-setup sc-front">
                            <div class="sc-front-title">Characters</div>
                          </div>
                        </div>
                      </div>
                      <div class="sc-holder">
                        <div id="sc-Verbs" class="segment-card">
                          <div class="sc-setup sc-back stroke-text Verbs">Verbs</div>
                          <div id="sc-Verbs-front" class="sc-setup sc-front">
                            <div class="sc-front-title">Verbs</div>
                          </div>
                        </div>
                      </div>
                      <div class="sc-holder">
                        <div id="sc-Adjectives" class="segment-card">
                          <div class="sc-setup sc-back stroke-text Adjectives">Adjectives</div>
                          <div id="sc-Adjectives-front" class="sc-setup sc-front">
                            <div class="sc-front-title">Adjectives</div>
                            <!-- <div class="sc-front-item">Tough</div> -->
                          </div>  
                        </div>
                      </div>
                  </div> <!--segment-cards-->
                    <div class="d-flex flex-row justify-content-between">
                      <div>What happens next is up to you...</div>
                      <div>
                        <span id="segment-char-rem" class="mr-1">250 </span>Characters Remaining
                      </div>
                    </div><!--input label and charcters remaining-->
                    <textarea id="snippet-text" oninput="snippetUpdate()" class="form-control board-entry-text" id="snippet-sub-text" rows="3" disabled></textarea>
                    </textarea><!--snippet input-->
                    <div class="d-flex flex-row mt-2 mb-0 justify-content-around">
                        <div id="segment-req" class="d-flex justify-content-between bg-white border border-dark rounded text-dark">
                          <div class="d-flex-column segment-req-list-col fa-md text-left">
                            <div class="d-flex flex-row">
                              <img id="sc-char-status" src="../images/square-outline-green-check.svg">
                              <div>Character</div>
                            </div>
                            <div class="d-flex flex-row">
                              <img id="sc-adj-status" src="../images/square-outline-red.svg">
                              <div>Adjective</div>
                            </div>
                          </div>
                          <div class="segment-req-list-col">
                            <div class="d-flex flex-row">
                              <img id="sc-verb-status" src="../images/square-outline-black.svg">
                              <div>Verb</div>
                            </div>
                          </div>
                        </div>
                        <div id="countdown" class="text-center mb-0">
                            <div id="coundown-div">
                                <span id="countdown-sec"></span><span id="countdown-text" style="display:none;"> seconds left</span>
                            </div>
                        </div>
                    </div><!--requirements and countdown-->
                    <div class="d-flex flex-row justify-content-around m-2 border-top border-light">
                      <button id="submit-snippet" class="btn btn-success px-5 mt-1">Ready to lock it in!?</button>
                      <button id="exit-game" onClick="swal.Close(); return false;" class="btn btn-danger px-5 mt-1">Leave Game?</button>
                    </div><!--buttons: lock in or Leave-->
                  </div> <!--game board-->
                </div> <!--game tab content-->
                <div id="storyTab" class="container tab-pane fade border border-dark">
                Stuff
                </div><!--story tab content-->
              </div><!--tabs container-->
            </div> <!--game holder-->
          </div> <!--col-md-6-->
        </div> <!--row-->
      </div> <!--content > container-->
    </div> <!--content-->
  </div> <!--wrapper--->
  <div class="overlay"></div>
</body>

</html>